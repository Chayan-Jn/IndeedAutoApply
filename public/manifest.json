{
  "manifest_version": 3,
  "name": "Indeed Auto Apply",
  "version": "1.0",
  "description": "Auto-apply to jobs on Indeed",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["*://*.indeed.com/*", "*://*.in.indeed.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto Apply"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.indeed.com/*", "*://*.in.indeed.com/*"],
      "js": ["content.js"]
    }
  ]
}
